<?xml version="1.0" encoding="UTF-8"?>
<web-app
   xmlns="http://xmlns.jcp.org/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
   metadata-complete="false"
   version="3.1">

  <servlet>
    <servlet-name>DataFetcher</servlet-name>
    <servlet-class>org.web.server.ShoppingTripServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>UserFetcher</servlet-name>
    <servlet-class>org.web.server.UserServlet</servlet-class>
  </servlet>
  
  <servlet>
    <servlet-name>ReceiptFetcher</servlet-name>
    <servlet-class>org.web.server.ReceiptServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>DataFetcher</servlet-name>
    <url-pattern>/api/*</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
    <servlet-name>UserFetcher</servlet-name>
    <url-pattern>/api/v1/user</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>ReceiptFetcher</servlet-name>
    <url-pattern>/api/v1/user/receipt</url-pattern>
  </servlet-mapping>
</web-app>
